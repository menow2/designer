{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "lib": [
      "dom",
      "es2016",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@sdk": [
        "./src/sdk.ts"
      ],
      "@utils": [
        "./src/utils/index.ts"
      ],
      "rxui": [
        "../../opensource-base/rxui"
      ],
      "react": [
        "../../demo-spa/node_modules/@types/react/index.d.ts"
      ],
      "react-dom": [
        "../../demo-spa/node_modules/@types/react-dom/index.d.ts"
      ],
      "@visualbricks/designer": [
        "./src/index.ts"
      ],
      "@visualbricks/compiler-js": [
        "../../opensource-base/compiler-js/index.ts"
      ]
    }
  },
  "exclude": [
    "./node_modules"
  ]
}